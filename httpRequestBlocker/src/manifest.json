{
    "manifest_version": 2,
    "name": "后台触发按键精灵",
    "short_name": "指定请求触发按键精灵",
    "version": "1.0.6",
    "description": "后台触发按键精灵",
    "author": "周鹏飞",
    "homepage_url": "https://github.com/clupasq/ChromeHttpRequestBlocker",

    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "storage"
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["blocker.js"]
    },
    "browser_action": {
        "default_title": "http请求拦截",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        },
        "default_popup": "popup.html"
    }
}
